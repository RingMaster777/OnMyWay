<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#00BCD4"
        android:padding="20dp">


        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/userProtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/editProfile"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/ic_edit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/topLayout">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="188dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/proName"
                android:layout_width="179dp"
                android:layout_height="85dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/caveat_brush"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:background="@color/browser_actions_bg_grey"
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_below="@+id/rel1"
        android:padding="20dp">

        <LinearLayout
            android:id="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="59dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_email_" />

            <TextView
                android:id="@+id/proEmail"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/l1">


            <ImageView
                android:id="@+id/passwordIcon"
                android:layout_width="59dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_lock" />

            <TextView
                android:id="@+id/proPass"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/l2">


            <ImageView
                android:id="@+id/jobIcon"
                android:layout_width="59dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_baseline_work" />

            <TextView
                android:id="@+id/proJob"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/l3">


            <ImageView
                android:id="@+id/cityIcon"
                android:layout_width="59dp"
                android:layout_height="42dp"
                android:src="@drawable/home_icon" />

            <TextView
                android:id="@+id/proCity"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/l4">


            <ImageView
                android:id="@+id/contactIcon"
                android:layout_width="59dp"
                android:layout_height="42dp"
                android:src="@drawable/contact" />

            <TextView
                android:id="@+id/proContact"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/rel2"
        android:padding="15dp">


        <TextView
            android:id="@+id/aboutmeTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aboutme"
            android:layout_width="362dp"
            android:layout_height="104dp"
            android:layout_below="@+id/aboutmeTag"
            android:fontFamily="@font/montserrat_alternates"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>





</RelativeLayout>


