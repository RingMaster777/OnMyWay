<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.about_us">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:background="#00bcd4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView"
            android:layout_width="81dp"
            android:layout_height="65dp"
            android:src="@drawable/goodlogo" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView"
            android:id="@+id/topText"
            android:layout_width="198dp"
            android:layout_height="42dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutLayout"
        android:layout_below="@+id/topLayout"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aboutTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="About"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_marginTop="10sp"
            android:layout_below="@+id/aboutTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On My Way is a travel guide application dedicated to help the travelers with proper information and guideline on his/her journey"
            android:textColor="@color/black"/>



    </RelativeLayout>
    
    <RelativeLayout
        android:padding="20dp"
        android:id="@+id/contactLayout"
        android:layout_below="@id/aboutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/contactTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Contact Us"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_below="@+id/contactTag"
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:paddingLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="ID: 190104089"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="rashikjoy777@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="01626908450"/>


            </LinearLayout>




            <LinearLayout
                android:paddingLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="ID: 190104098"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="shariarnadimprince@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="01749777059"/>


            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>