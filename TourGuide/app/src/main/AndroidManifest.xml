<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/goodlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/goodlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourGuide">
        <activity
            android:name=".admin.ShowAllData"
            android:exported="true" />
        <activity
            android:name=".user.pop_up_details"
            android:exported="true" />
        <activity
            android:name=".user.place_desc"
            android:exported="true" />
        <activity android:name=".common.splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".common.Login" />
        <activity android:name=".common.Register" />
        <activity android:name=".user.user_dashboard" />
        <activity android:name=".user.user_Profile" />
        <activity android:name=".user.category_places" />
        <activity android:name=".user.profile_update" />
        <activity android:name=".user.addNewPlace" />
        <activity android:name=".user.about_us"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>